{
	"manifest_version": 2,
	"name": "VolumeMixer",
	"version": "1.0",

	"applications": {
		"gecko": {
			"id": "svenholtrop@gmail.com"
		}
 	},

	"description": "Allows volume management of individual tabs.",
	"background": {
		"scripts": ["background.js"]
	},

	"content_scripts": [ 
		{ 
			"matches": ["*://*/*"], 
			"js": ["audiomanager.js"]
		}
	],

	"permissions" : [
		"tabs",
		"<all_urls>"
	],

	"browser_action" : {
		"default_popup" : "popup.html",
		"default_title" : "VolumeMixer"
	}

}
